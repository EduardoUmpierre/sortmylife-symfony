{% extends 'base.html.twig' %}

{% block body %}
    <main class="container">
        <section class="row detail-section" data-id="{{ book.id }}">
            <div class="col-xs-12">

                <div class="row">
                    <div class="col-xs-3">
                        <span class="list-image" style="background-image: url({{ book.image }});"></span>
                    </div>
                    <div class="col-xs-9">
                        <h2>{{ book.title }}</h2>
                        <h3>{{ book.year }}</h3>
                        <p>{{ book.description }}</p>
                    </div>
                </div>
            </div>
        </section>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <nav id="detail-options">
            <ul class="row">
                <li class="col-xs-3">
                    <a
                        href="#"
                        class="btn btn-default js-btn-book {% if read is not empty %}active{% endif %}"
                        data-url="ler">
                        JÃ¡ li
                    </a>
                </li>
                <li class="col-xs-3">
                    <a
                        href="#"
                        class="btn btn-default js-btn-book {% if wantToRead is not empty %}active{% endif %}"
                        data-url="quero-ler">
                        Quero ler
                    </a>
                </li>
                <li class="col-xs-3">
                    <a
                        href="#"
                        class="btn btn-default js-btn-book {% if favorite is not empty %}active{% endif %}"
                        data-url="favoritar">
                        Favoritar
                    </a>
                </li>
            </ul>
        </nav>
        {% endif %}

        <section class="row content-section">
            <div class="col-xs-12">
                <h2>Autor do livro</h2>

                {{ include('Partials/author-list.html.twig', {'authors': authors}) }}
            </div>
        </section>
    </main>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/site/js/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/site/js/user-api.js') }}"></script>
{% endblock %}