{% extends 'adminbase.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Autor: {{ author.name }}</h1>

            <table class="table table-stripped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ author.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ author.name }}</td>
                    </tr>
                    <tr>
                        <th>Bio</th>
                        <td>{{ author.bio }}</td>
                    </tr>
                    <tr>
                        <th>Birthday</th>
                        <td>{% if author.birthday %}{{ author.birthday | date('d/m/Y') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Photo</th>
                        <td>{{ author.photo }}</td>
                    </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('author_index') }}">Voltar para a lista</a>
                </li>
                <li>
                    <a href="{{ path('author_edit', { 'id': author.id }) }}">Editar</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Excluir">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
