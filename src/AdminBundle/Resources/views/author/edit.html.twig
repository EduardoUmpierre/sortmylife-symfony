{% extends 'adminbase.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="portlet light tasks-widget bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject font-green-haze bold uppercase">Editar autor</span>
                    </div>
                    <div class="actions">
                        {{ form_start(delete_form) }}
                        <input type="submit" class="btn btn-danger btn-sm" value="Excluir">
                        {{ form_end(delete_form) }}
                    </div>
                </div>

                <div class="portlet-body">
                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                    {{ form_end(edit_form) }}
                </div>
            </div>

            <a class="btn btn-default" href="{{ path('author_index') }}">Voltar para a lista</a>
        </div>
    </div>
{% endblock %}