{% extends 'adminbase.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Lista de livros</h1>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Descrição</th>
                    <th>Imagem</th>
                    <th>Ano de lançamento</th>
                    <th>Ações</th>
                </tr>
                </thead>
                <tbody>
                {% for book in books %}
                    <tr>
                        <td><a href="{{ path('book_show', { 'id': book.id }) }}">{{ book.id }}</a></td>
                        <td>{{ book.title }}</td>
                        <td>{{ book.description }}</td>
                        <td>{{ book.image }}</td>
                        <td>{{ book.year }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('book_show', { 'id': book.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('book_edit', { 'id': book.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('book_new') }}">Adicionar livro</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
